<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.hidroh.nonstop">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.github.hidroh.nonstop.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.hidroh.nonstop.ConfigOrientationActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name="io.github.hidroh.nonstop.RetainedFragmentActivity"/>
        <activity android:name="io.github.hidroh.nonstop.NestedRetainedFragmentActivity">
        </activity>
        <activity android:name="io.github.hidroh.nonstop.ViewPagerActivity">
        </activity>
    </application>

</manifest>